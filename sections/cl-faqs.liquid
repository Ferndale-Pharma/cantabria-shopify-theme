{% comment %}
  Simple FAQs (single group)
  - No search/nav
  - Accordion toggle + GA4 datalayer
  - JSON-LD FAQPage
  - Uses color scheme wrappers like collapsible-content
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .faq-simple {
    max-width: 800px;
    margin: auto;
  }
  .faq-section-title {
    text-align: center;
  }
  .faq-item {
    margin-bottom: 10px;
  }

  .faq-question-wrapper {
    margin: 0;
  }

  .faq-question {
    width: 100%;
    text-align: left;
    padding: 15px;
    border: none;
    font-weight: bold;
    cursor: pointer;
    border-radius: 4px;

    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10px;

    /* Use theme scheme variables */
    color: rgb(var(--color-foreground));
    background: rgba(var(--color-foreground), 0.06);
  }

  .faq-question[aria-expanded="true"] {
    background: rgba(var(--color-foreground), 0.10);
    border-radius: 4px 4px 0px 0px;
  }

  .faq-question svg {
    stroke: rgb(var(--color-foreground));
    transition: transform 0.2s ease;
  }

  .faq-chevron svg.hidden {
    display: none;
  }

  .faq-answer {
    padding: 10px 15px;
    display: none;

    /* Use scheme variables */
    background: rgba(var(--color-foreground), 0.03);
    color: rgb(var(--color-foreground));
  }

  .faq-answer.hidden {
    display: none;
  }

  .faq-answer.visible {
    display: block;
    border-radius: 0px 0px 4px 4px;
  }

  .faq-answer ul {
    margin-left: 15px;
  }

  .faq-answer ul li:not(:last-of-type) {
    margin-bottom: 1rem;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="faq-simple content-container color-{{ section.settings.container_color_scheme }} gradient"
         data-faq-simple-section="{{ section.id }}">
        <h2 class="faq-section-title">{{ section.settings.title }}</h2>
      {% for block in section.blocks %}
        <div class="faq-item" {{ block.shopify_attributes }}>
          <h3 class="faq-question-wrapper">
            <button
              class="faq-question"
              aria-expanded="false"
              aria-controls="faq-answer-{{ section.id }}-{{ block.id }}"
              id="faq-question-{{ section.id }}-{{ block.id }}"
              data-faq-question="{{ block.settings.title | escape }}"
              data-faq-group="Simple FAQ"
              type="button"
            >
              <span class="faq-question-text">{{ block.settings.title }}</span>
              <span class="faq-chevron" aria-hidden="true">
                <!-- Down chevron -->
                <svg class="chevron-down" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path d="M6 9l6 6 6-6"/>
                </svg>
                <!-- Up chevron -->
                <svg class="chevron-up hidden" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path d="M6 15l6-6 6 6"/>
                </svg>
              </span>
            </button>
          </h3>

          <div
            class="faq-answer hidden"
            id="faq-answer-{{ section.id }}-{{ block.id }}"
            role="region"
            aria-labelledby="faq-question-{{ section.id }}-{{ block.id }}"
          >
            {{ block.settings.answer }}
          </div>
        </div>
      {% endfor %}

      {%- assign faq_json = "" -%}
      {% for block in section.blocks %}
        {% assign question = block.settings.title | strip %}
        {% assign answer = block.settings.answer | strip_html | strip_newlines | escape %}
        {% capture faq_json %}
          {{ faq_json }},
          {
            "@type": "Question",
            "name": {{ question | json }},
            "acceptedAnswer": {
              "@type": "Answer",
              "text": {{ answer | json }}
            }
          }
        {% endcapture %}
      {% endfor %}

      <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [{{ faq_json | remove_first: "," }}]
      }
      </script>

    </div>
  </div>
</div>

<script>
  (function () {
    function initSimpleFaq(root) {
      if (!root) return;

      const faqQuestions = root.querySelectorAll(".faq-question");
      if (!faqQuestions.length) return;

      faqQuestions.forEach(button => {
        if (button.dataset.bound === "1") return;
        button.dataset.bound = "1";

        button.addEventListener("click", () => {
          const isExpanded = button.getAttribute("aria-expanded") === "true";
          const answerId = button.getAttribute("aria-controls");
          const answerEl = root.querySelector("#" + CSS.escape(answerId));
          if (!answerEl) return;

          button.setAttribute("aria-expanded", String(!isExpanded));
          answerEl.classList.toggle("hidden", isExpanded);
          answerEl.classList.toggle("visible", !isExpanded);

          const chevronDown = button.querySelector(".chevron-down");
          const chevronUp = button.querySelector(".chevron-up");

          if (!isExpanded) {
            chevronDown.classList.add("hidden");
            chevronUp.classList.remove("hidden");
          } else {
            chevronDown.classList.remove("hidden");
            chevronUp.classList.add("hidden");
          }

          if (window.dataLayer) {
            window.dataLayer.push({
              event: "faq_click",
              faqQuestion: button.dataset.faqQuestion || "",
              faqGroup: button.dataset.faqGroup || "Simple FAQ"
            });
          }
        });
      });
    }

    function initAll() {
      document.querySelectorAll('[data-faq-simple-section]').forEach(initSimpleFaq);
    }

    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initAll);
    } else {
      initAll();
    }

    document.addEventListener("shopify:section:load", function (event) {
      if (!event || !event.target) return;
      const root = event.target.querySelector('[data-faq-simple-section]');
      initSimpleFaq(root);
    });
  })();
</script>

